<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Add Details For Profile Creation"
            android:textAlignment="center"

            android:textAllCaps="true"
            android:textColor="?android:attr/editTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/tvAddress_Get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:background="#0000"
            android:ems="10"
            android:hint="Name Of Profile"
            android:inputType="textPersonName"
            android:padding="12dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="125dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Geo Fence Size"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="184dp" />

        <EditText
            android:id="@+id/etGeofence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="in meters"
            android:inputType="number"
            android:maxLength="4"
            android:text="100"
            android:visibility="gone"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="184dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="Ringtone"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="238dp" />

        <Spinner
            android:id="@+id/spRing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="238dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="Volume"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="296dp" />

        <SeekBar
            android:id="@+id/skVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:progress="60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editText"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="296dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Message Tone"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="351dp" />

        <Spinner
            android:id="@+id/spMsgTone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="352dp" />

        <Switch
            android:id="@+id/sSilentMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="9dp"
            android:text="SILENT"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="433dp" />

        <Switch
            android:id="@+id/sVibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="9dp"
            android:text="VIBRATION"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="433dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date and Time"
            android:id="@+id/btnSelectDate"/>

        <Button
            android:id="@+id/btnCreate"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-condensed"
            android:text="CREATE PROFILE"
            android:textSize="24sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="504dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>


