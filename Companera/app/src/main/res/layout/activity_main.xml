<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="trainedge.companera.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:contentDescription="@string/companera"
        app:srcCompat="@drawable/com" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="@string/companera"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivGoogle_Sign_In"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:contentDescription="@string/companera"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal" />

    <Button
        android:id="@+id/ivFbSignIn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignTop="@+id/ivGoogle_Sign_In"
        android:layout_marginEnd="11dp"
        android:background="@drawable/com_facebook_button_icon_blue"
        android:textColor="@color/cardview_light_background"
        android:textSize="50sp"
        android:textStyle="bold" />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/ivFbSignIn"
        android:layout_alignStart="@+id/ivLogo" />

</RelativeLayout>
